{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Caesar Cipher CLI",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/caesar-cipher-cli.js",
      "args": [
        "-a",
        "encode",
        "-s",
        "7",
        "-i",
        "input.txt",
        "-o",
        "output.txt"
      ],
      "trace": "verbose",
      "outputCapture": "std",
      "cwd": "${workspaceFolder}",
      // "stopOnEntry": true
    }
  ]
}